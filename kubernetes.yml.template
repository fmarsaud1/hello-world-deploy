apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: hello-world-deploy
  labels:
    commit: ${WERCKER_GIT_COMMIT}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hello-world-deploy
  template:
    metadata:
      labels:
        app: hello-world-deploy
        commit: ${WERCKER_GIT_COMMIT}
    spec:
      containers:
      - name: hello-world-deploy
        image: ${DOCKER_REPO}:${WERCKER_GIT_BRANCH}-${WERCKER_GIT_COMMIT}
        imagePullPolicy: Always
        ports:
        - name: hello-world-deploy
          containerPort: 8080
          protocol: TCP
      imagePullSecrets:
        - name: wercker          
---
apiVersion: v1
kind: Service
metadata:
  name: hello-world-deploy
  labels:
    app: hello-world-deploy
    commit: ${WERCKER_GIT_COMMIT}
spec:
  ports:
  - port: 80
    targetPort: 8080
  selector:
    app: hello-world-deploy
    commit: ${WERCKER_GIT_COMMIT}
  type: LoadBalancer
---
